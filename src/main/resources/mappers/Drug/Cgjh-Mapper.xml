<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.gson.his.model.mappers.Drug.CgjhMapper">
    <select id="cgjhcx" resultType="cn.gson.his.model.pojos.Drug.PlanInfoEntity">
        select * from PLAN_INFO
        <where>
            <if test="nr!=null and nr!=''">
                and PLAN_ID like concat(concat('%',#{nr}),'%')
            </if>
        </where>
    </select>

    <select id="cgjhxqcx" resultType="cn.gson.his.model.pojos.Drug.ProductEntity">
        select * from PRODUCT
        <where>
            PLAN_ID=#{id}
            <if test="nr!=null and nr!=''">
                and PRODUCT_NAME like concat(concat('%',#{nr}),'%')
            </if>
        </where>
    </select>

    <select id="cgjhcxid" resultType="cn.gson.his.model.pojos.Drug.PlanInfoEntity">
        select * from PLAN_INFO where PLAN_ID=#{id}
    </select>

    <select id="cgcx" resultType="cn.gson.his.model.pojos.Drug.OrdersEntity">
        select * from ORDERS where plan_id=#{id}
    </select>

</mapper>